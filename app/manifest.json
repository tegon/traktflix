{
  "background": {
    "scripts": [
      "js/vendor.js",
      "js/background.js"
    ]
  },
  "content_scripts": [
    {
      "js": [
        "js/content.js"
      ],
      "matches": [
        "*://*.netflix.com/*"
      ]
    }
  ],
  "default_locale": "en",
  "description": "__MSG_appDescription__",
  "icons": {
    "16": "img/traktflix-icon-16.png",
    "128": "img/traktflix-icon-128.png"
  },
  "manifest_version": 2,
  "name": "__MSG_appName__",
  "page_action": {
    "default_icon": {
      "19": "img/traktflix-icon-19.png",
      "38": "img/traktflix-icon-38.png"
    },
    "default_popup": "popup.html",
    "default_title": "traktflix"
  },
  "permissions": [
    "*://*.netflix.com/*",
    "*://api.rollbar.com/*",
    "*://api.trakt.tv/*",
    "*://trakt.tv/*",
    "https://www.google-analytics.com/",
    "cookies",
    "identity",
    "notifications",
    "storage",
    "tabs",
    "unlimitedStorage"
  ],
  "version": "2.0.0",
  "web_accessible_resources": [
    "img/traktflix-icon-38.png",
    "img/traktflix-icon-selected-38.png",
    "img/svg/*.svg"
  ]
}
