{
  "env": {
    "browser": true,
    "es6": true,
    "jasmine": true,
    "node": true,
    "webextensions": true
  },
  "extends": [
    "eslint:recommended",
    "plugin:react/recommended"
  ],
  "parser": "babel-eslint",
  "parserOptions": {
    "ecmaVersion": 9,
    "sourceType": "module"
  },
  "plugins": [
    "jasmine",
    "sinon"
  ],
  "rules": {
    "no-console": "off",
    "no-constant-condition": [
      "error",
      {
        "checkLoops": false
      }
    ],
    "no-empty": "off",
    "no-fallthrough": "off"
  }
}